{
	"version": "2.1.5",
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"outDir": "dist/dev/src/",
		"baseUrl": "./",
		"plugins": [
			{
				"name": "tslint-language-service",
				"alwaysShowRuleFailuresAsWarnings": true
			}
		],
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [ "intern" ],
		"paths": {
			"@dojo/widgets/*": ["src/*"]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx"
	]
}
